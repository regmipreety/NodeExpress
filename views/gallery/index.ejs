<html lang="en">
    <%- include('../partials/header.ejs') %>    
    <body>
    <%- include('../partials/nav.ejs') %>
    <div class="container w-75">
        <%- include('../partials/messages.ejs') %>
        <div class="row">
            <% images.forEach(img => { %>
                <div class="col-4">
                    <img
                    style="border: 3px solid grey"
                    class="mx-4 my-3 p-1"
                    height="250"
                    width="250"
                    src="<%= img.imgUrl%>"
                    />
                    <form
                    style="display: inline"
                    action="/gallery/delete/<%= img.id %>?_method=DELETE"
                    method="POST"
                    >
                    <input type="hidden" name="_method" value="DELETE" />
                    <button
                        style="cursor: pointer"
                        type="submit"
                        class="btn btn-danger float-none mx-4 px-5"
                    >
                        Delete
                    </button>
                    </form>
                </div>
            <% }) %>
       
        </div>
    </div>
    </body>
    <%- include('../partials/footer.ejs') %>
</html>