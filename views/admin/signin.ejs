<html lang="en">
<head>
<%- include('../partials/header.ejs') %>
</head>
<body>
<%- include('../partials/nav.ejs') %>
<h1 class="text-center mt-5 mb-3">Admin Login</h1>
<div class="container w-25">
  <%- include('../partials/messages.ejs') %>
  <form action="/admin/login" method="POST">
    <div class="mb-3">
      <label for="email" class="form-label">Email:</label>
      <input type="text" class="form-control" placeholder="Enter email" name="email">
      <div class = "email-error text-danger"></div>
    </div>
    <div class="mb-3">
      <label for="pwd" class="form-label">Password:</label>
      <input type="password" class="form-control" placeholder="Enter password" name="password">
      <div class = "password-error text-danger"></div>
    </div>
    <a class="float-right mt-0 mb-3 text-danger" href="/forgot"
      >Forgot Password?</a><br>
    <button type="submit" class="btn btn-danger btn-block">Login</button>
  </form><hr>
  <p class="text-center my-2"><b>OR</b></p>
  <a href="/admin/register" class="btn btn-danger btn-block">Sign Up</a>
</div>
<%- include('../partials/footer.ejs') %>
</body>
</html>