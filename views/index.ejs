<%- include('../partials/header.ejs') %>   
<body>
    <div class = "container-fluid">
    <%- include('../partials/nav.ejs') %>
     <div class="container">
            <h2>All Blogs</h2>

            <% if(blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                    <h3 class= "title"> <%= blog.title %></h3>
